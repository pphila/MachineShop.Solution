@{
  Layout="_Layout";
}

<nav class="navbar">
  <ul>
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Engineers", "Index", "Engineers")</li>
    <li>@Html.ActionLink("Add Machine", "Create")</li>
  </ul>
</nav>

@using Factory.Models

<h1>Machines</h1>

<div class="machine_list">
  @if (@Model.Count == 0)
  {
    <h3>There are no machines assembled yet.</h3>
  }

  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</div>